<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cn.zjnu.myjournalquery.InfoActivity" >

	<TextView
	    android:id="@+id/tv_number"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
	    />
	<TextView
	    android:id="@+id/tv_id"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_below="@+id/tv_number"
		android:text="id："
	    />
	<TextView
	    android:id="@+id/tv_rank"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_below="@+id/tv_id"
		android:text="排名："
	    />
	<TextView
	    android:id="@+id/tv_shortName"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_below="@+id/tv_rank"
		android:text="简称："
	    />
	<TextView
	    android:id="@+id/tv_fullName"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_below="@+id/tv_shortName"
		android:text="全称："
	    />
	<TextView
	    android:id="@+id/tv_publishHouse"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_below="@+id/tv_fullName"
		android:text="出版社："
	    />
	<Button
	    android:id="@+id/btn_up"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/tv_publishHouse"
	    android:text="上一条"/>
	<Button
	    android:id="@+id/btn_down"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/tv_publishHouse"
	    android:layout_toRightOf="@+id/btn_up"
	    android:text="下一条"/>
</RelativeLayout>
