<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.zjnu.myjournalquery.MainActivity" >


	<android.support.v7.widget.AppCompatCheckBox
		android:id="@+id/cb_Name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
	<EditText
		android:id="@+id/edt_Name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/cb_Name"
		android:hint="请输入学科名                           "
		android:text="ACMTRANSACTIONSONCOMPUTERSYSTEMS"
		/>

	<android.support.v7.widget.AppCompatCheckBox
		android:id="@+id/cb_ISSN"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/cb_Name"
		android:layout_marginTop="10dp" />

	<EditText
		android:id="@+id/edt_ISSN"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/edt_Name"
		android:layout_toRightOf="@+id/cb_ISSN"
		android:hint="在这里输入ISSN"
		android:text="0734-2071" />

	<android.support.v7.widget.AppCompatCheckBox
		android:id="@+id/cb_Press"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/cb_Name"
		android:layout_marginLeft="16dp"
		android:layout_marginTop="10dp"
		android:layout_toRightOf="@+id/edt_ISSN" />

	<EditText
		android:id="@+id/edt_Press"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/edt_Name"
		android:layout_toRightOf="@+id/cb_Press"
		android:hint="在这里输入出版社"
		android:text="ACM" />

	<android.support.v7.widget.AppCompatCheckBox
		android:id="@+id/cb_CiteScore"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/cb_ISSN"
		android:text="CiteScore"
		android:layout_marginTop="10dp" />

	<android.support.v7.widget.AppCompatTextView
		android:id="@+id/tv_Csl"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/cb_CiteScore"
		android:text="最小值:"/>
	<EditText
		android:id="@+id/edt_Csl"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/cb_CiteScore"
		android:layout_toRightOf="@+id/tv_Csl"
		android:layout_marginTop="-15dp"
		android:text="3" />
	<android.support.v7.widget.AppCompatTextView
		android:id="@+id/tv_Csh"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="50dp"
		android:layout_toRightOf="@+id/edt_Csl"
		android:layout_below="@+id/cb_CiteScore"
		android:text="最大值"/>

	<EditText
		android:id="@+id/edt_Csh"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/cb_CiteScore"
		android:layout_marginTop="-15dp"
		android:layout_toRightOf="@+id/tv_Csh"
		android:text="4" />
	<android.support.v7.widget.AppCompatCheckBox
		android:id="@+id/cb_Hindex"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/tv_Csl"
		android:text="h_index"
		 />
	<android.support.v7.widget.AppCompatTextView
		android:id="@+id/tv_Hdl"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/cb_Hindex"
		android:text="最小值:"/>
	<EditText
		android:id="@+id/edt_Hdl"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/cb_Hindex"
		android:layout_marginTop="-15dp"
		android:layout_toRightOf="@+id/tv_Hdl"
		android:text="60" />
	<android.support.v7.widget.AppCompatTextView
		android:id="@+id/tv_Hdh"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="50dp"
		android:layout_toRightOf="@+id/edt_Hdl"
		android:layout_below="@+id/cb_Hindex"
		android:text="最大值"/>
	<EditText
		android:id="@+id/edt_Hdh"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/cb_Hindex"
		android:layout_marginTop="-15dp"
		android:layout_toRightOf="@+id/tv_Hdh"
		android:text="65" />
	<android.support.v7.widget.AppCompatCheckBox
		android:id="@+id/cb_SCI"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/tv_Hdl"
		android:text="SCI分区标准"/>
	<android.support.v7.widget.AppCompatTextView
		android:id="@+id/tv_Fenqu"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/cb_SCI"
		android:text="SCI分区"/>

	<EditText
		android:id="@+id/edt_Fenqu"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/cb_SCI"
		android:layout_toRightOf="@+id/tv_Fenqu"
		android:layout_marginTop="-15dp"
		android:text="2"
		 />
	<android.support.v7.widget.AppCompatTextView
		android:id="@+id/tv_Bsj"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:layout_below="@id/tv_Fenqu"
		android:text="SCI大类学科"/>

	<EditText
		android:id="@+id/edt_Bsj"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/edt_Fenqu"
		android:layout_marginTop="-15dp"
		android:layout_toRightOf="@+id/tv_Bsj"
		android:text="工程技术" />
	<android.support.v7.widget.AppCompatTextView
		android:id="@+id/tv_Ssj"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:layout_below="@id/tv_Bsj"
		android:text="SCI小类学科"/>

	<EditText
		android:id="@+id/edt_Ssj"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/edt_Bsj"
		android:layout_toRightOf="@+id/tv_Ssj"
		android:layout_marginTop="-15dp"
		android:text="计算机：理论方法" />
	<android.support.v7.widget.AppCompatCheckBox
		android:id="@+id/cb_Watch"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/cb_SCI"
		android:layout_below="@+id/tv_Hdl"
		android:layout_marginLeft="150dp"
		android:text="查看数"/>
	<android.support.v7.widget.AppCompatTextView
		android:id="@+id/tv_Watchl"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/cb_Watch"
		android:layout_marginLeft="250dp"
		android:text="查看数最小值"/>
	<EditText
		android:id="@+id/edt_Watchl"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/tv_Watchl"
		android:layout_below="@id/cb_Watch"
		android:layout_marginTop="-15dp"
		android:text="13000"/>

	<android.support.v7.widget.AppCompatTextView
		android:id="@+id/tv_Watchh"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/tv_Watchl"
		android:layout_marginLeft="250dp"
		android:layout_marginTop="10dp"
		android:text="查看数最大值"/>
	<EditText
		android:id="@+id/edt_Watchh"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/tv_Watchh"
		android:layout_below="@id/edt_Watchl"
		android:layout_marginTop="-15dp"
		android:text="14000"/>
	<android.support.v7.widget.AppCompatCheckBox
		android:id="@+id/cb_IF"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/tv_Ssj"
		android:layout_marginTop="10dp"
		android:text="2016~2018if指数"/>
	<android.support.v7.widget.AppCompatTextView
		android:id="@+id/tv_Ifl"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/cb_IF"
		android:text="if近三年平均值最小值"/>
	<EditText
		android:id="@+id/edt_Ifl"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/cb_IF"
		android:layout_toRightOf="@+id/tv_Ifl"
		android:layout_marginTop="-15dp"
		android:text="2.6"/>
	<android.support.v7.widget.AppCompatTextView
		android:id="@+id/tv_Ifh"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/cb_IF"
		android:layout_toRightOf="@id/edt_Ifl"
		android:text="if近三年平均值最大值"/>
	<EditText
		android:id="@+id/edt_Ifh"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/cb_IF"
		android:layout_toRightOf="@+id/tv_Ifh"
		android:layout_marginTop="-15dp"
		android:text="2.8"/>
	<android.support.v7.widget.AppCompatCheckBox
		android:id="@+id/cb_CCF"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/tv_Ifl"
		android:text="CCF中的分类"/>
	<EditText
		android:id="@+id/edt_CCF"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/tv_Ifl"
		android:layout_toRightOf="@+id/cb_CCF"
		android:layout_marginTop="-10dp"
		android:layout_marginLeft="20dp"
		android:text="A"/>
	<Button
		android:id="@+id/btn_select"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:text="查询期刊信息" />
</RelativeLayout>